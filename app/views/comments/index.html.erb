<p id="notice"><%= notice %></p>

<h1><%= t('.moderation') %></h1>

<h4><%= t('.qtd_comments', number: @comments.size) %></h4>

<h4><%= link_to 'Edit all justifies', moderate_all_path %></h4>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th><%= t('.body') %></th>
      <th>Post ID</th>
      <th><%= t('.user') %> (ID)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.id %></td>
        <td><%= comment.body %></td>
        <td><%= comment.commentable_id %></td>
        <td><%= comment.user.name %> (<%= comment.user_id %>)</td>
        <td><%= link_to t('.details'), comment %></td>    
      </tr>
    <% end %>
  </tbody>
</table>