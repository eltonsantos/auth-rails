<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<%= search_form_for @q do |f| %>
  <%= f.label :name_cont %>
  <%= f.search_field :name_cont %>

  <%= f.label :marca_cont %>
  <%= f.search_field :marca_cont %>

  <%= f.label :user_name_cont %>
  <%= f.search_field :user_name_cont %>

  <%= f.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Marca</th>
      <th>Price</th>
      <th>User (id)</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.name %></td>
        <td><%= car.marca %></td>
        <td><%= number_to_currency_br(car.price) %></td>
        <td><%= car.user.name %> (<%= car.user.id %>)</td>
        <td><%= car.comments.size %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @cars %>

<br>

<% if can? :manage, Car %>
  <%= link_to 'New Car', new_car_path %>
<% end %>
